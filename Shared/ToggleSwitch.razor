<input type="checkbox" @bind="Value" />

@code {
    [Parameter]
    public EventCallback<bool> ValueChanged { get; set; }

    private bool _value;
    [Parameter]
    public bool Value
    {
        get { return _value; }
        set
        {
            if (_value != value)
            {
                _value = value;
                ValueChanged.InvokeAsync(_value);
            }
        }
    }
}

<style>
    ﻿input {
        position: relative;
        background-color: red;
        height: 30px;
        width: 60px;
        -webkit-appearance: none;
        background: purple;
        outline: none;
        border-radius: 15px;
    }

    input:before {
        cursor: pointer;
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 30px;
        height: 30px;
        transform: scale(0.85);
        border-radius: 50%;
        background: white;
        transition: .5s;
    }

    input:checked:before {
        left: 30px;
    }
</style>